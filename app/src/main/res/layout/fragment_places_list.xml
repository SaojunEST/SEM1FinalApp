<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/placeslist_background"
    tools:context="com.eliteshadows.saojun.sem1application.PlacesList$PlaceholderFragment">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Albertus Magnus"
        android:id="@+id/exampleplacesbutton"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:onClick="setupAlbertusMagnusButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UST Carpark"
        android:id="@+id/button"
        android:layout_below="@+id/exampleplacesbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="setupUSTCarparkButton"
        android:layout_alignRight="@+id/exampleplacesbutton"
        android:layout_alignEnd="@+id/exampleplacesbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beato Angelico"
        android:id="@+id/button2"
        android:onClick="setupBeatoAngelinoButton"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benavides"
        android:id="@+id/button3"
        android:onClick="setupBenavidesButton"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/textView"
        android:layout_toLeftOf="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alumni Center"
        android:id="@+id/button4"
        android:onClick="setupAlumniCenterButton"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Building"
        android:id="@+id/button5"
        android:onClick="setupMainBuildingButton"
        android:layout_alignTop="@+id/exampleplacesbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/exampleplacesbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roque Ruaño"
        android:id="@+id/button6"
        android:onClick="setupRoqueRuanoButton"
        android:layout_below="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="St. Martin de Porres"
        android:id="@+id/button7"
        android:onClick="setupMartinDePorresButton"
        android:layout_below="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="St. Raymund de Peñafort"
        android:id="@+id/button8"
        android:onClick="setupRaymundButton"
        android:layout_above="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tan Yan Kee"
        android:id="@+id/button9"
        android:onClick="setupTanYanKeeButton"
        android:layout_below="@+id/button8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button3" />

</RelativeLayout>
